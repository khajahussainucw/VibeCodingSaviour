---
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION, CONTACT_API_URL } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<h1>Website for Sale</h1>
			<p>This website is available for purchase. To enquire, please contact me via the following API:</p>
			<div class="api-info">
				<p><strong>Contact API endpoint:</strong></p>
				<code class="endpoint">{CONTACT_API_URL}/ContactUs/SendEmail</code>
				<p><strong>Method:</strong> POST</p>
				<p><strong>Parameters:</strong> <code>name</code>, <code>email</code>, <code>message</code> (query string or form data)</p>
			</div>
		</main>
	</body>
</html>
<style>
	main {
		text-align: center;
	}
	.api-info {
		text-align: left;
		margin-top: 2em;
		padding: 1.5em;
		background: rgb(var(--gray-light));
		border-radius: 8px;
		box-shadow: var(--box-shadow);
	}
	.endpoint {
		display: block;
		word-break: break-all;
		margin: 0.5em 0;
		padding: 0.5em;
		background: rgb(var(--gray-dark));
		color: white;
		border-radius: 4px;
	}
	pre {
		overflow-x: auto;
	}
</style>
